
<div class = "movies-page">
    <h1>Ironhack Cinema</h1>
    <p>Click on the movie to check the showtimes!</p>

  <div class= "row">
    {{#each movies}}
   
      <div class="card text-center col-md-3" style="width: 18rem;">
        <img class="card-img-top" src="{{image}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <a href="./movie/{{id}}" class="btn btn-outline-secondary">See more</a>
        </div>
      </div>

    {{/each}}
  </div>
</div>
